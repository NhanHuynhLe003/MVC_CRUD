<div>
    <div id="courseContainer" style="display: flex; flex-direction: row; flex-wrap: wrap;">
        {{#each courses}}
        <div class="card" style="width: 45%; margin: 2rem;">
            <a href="/courses/{{this.slug}}">
                <img class="card-img-top" src="{{this.image}}" alt="Card image cap" style="width: 100%;">
            </a>
            <div class="card-body">
                <a href="/courses/{{this.slug}}">
                    <h5 class="card-title">{{this.title}}</h5>
                </a>
                <p class="card-text">{{this.description}}</p>
                <a href="#" class="btn btn-primary">Buy</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>